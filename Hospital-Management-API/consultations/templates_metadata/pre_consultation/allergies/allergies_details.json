{
  "allergy_type": {
    "fields": [
      {
        "key": "type",
        "type": "single_select",
        "label": "Allergy Type",
        "options": [
          "Drug",
          "Food",
          "Environmental",
          "Latex",
          "Other"
        ]
      }
    ]
  },

  "allergen": {
    "fields": [
      {
        "key": "allergen_name",
        "type": "text",
        "label": "Allergen",
        "placeholder": "e.g. Penicillin, Milk, Dust, Pollen"
      }
    ]
  },

  "reaction": {
    "fields": [
      {
        "key": "reaction",
        "type": "multi_select",
        "label": "Reaction",
        "options": [
          "Rash",
          "Itching",
          "Swelling",
          "Breathlessness",
          "Wheezing",
          "Vomiting",
          "Diarrhea",
          "Dizziness",
          "Anaphylaxis",
          "Other"
        ],
        "allow_custom": true
      }
    ]
  },

  "severity": {
    "fields": [
      {
        "key": "severity",
        "type": "single_select",
        "label": "Severity",
        "options": [
          "Mild",
          "Moderate",
          "Severe"
        ]
      }
    ]
  },

  "status": {
    "fields": [
      {
        "key": "status",
        "type": "single_select",
        "label": "Status",
        "options": [
          "Active",
          "Resolved",
          "Unknown"
        ]
      }
    ]
  },

  "additional_notes": {
    "fields": [
      {
        "key": "notes",
        "type": "text",
        "label": "Additional Notes",
        "multiline": true,
        "placeholder": "Any additional allergy-related information"
      }
    ]
  }
}