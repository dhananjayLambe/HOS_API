{
  "height_weight": {
    "fields": [
      {
        "key": "height",
        "type": "number",
        "label": "Height",
        "unit": "cm",
        "supported_units": ["cm", "ft"],
        "canonical_unit": "cm",
        "step": 0.1,
        "min": 30,
        "max": 250,
        "range": [30, 250],
        "ui_group": "body",
        "tab_order": 10,
        "validation": {
          "required": false,
          "min": 30,
          "max": 250,
          "error_messages": {
            "min": "Height must be at least {min} {unit}",
            "max": "Height cannot exceed {max} {unit}",
            "invalid": "Please enter a valid height"
          }
        },
        "ui_config": {
          "ft_in": {
            "fields": ["feet", "inches"]
          }
        }
      },
      {
        "key": "weight",
        "type": "number",
        "label": "Weight",
        "unit": "kg",
        "supported_units": ["kg", "lb"],
        "canonical_unit": "kg",
        "ui_group": "body",
        "tab_order": 20,
        "validation": {
          "required": false,
          "min": 0.1,
          "max": 500,
          "error_messages": {
            "min": "Weight must be at least 0.1 kg",
            "max": "Weight cannot exceed 500 kg",
            "invalid": "Please enter a valid weight"
          }
        }
      },
      {
        "key": "bmi",
        "type": "calculated",
        "label": "BMI",
        "formula": "weight / ((height / 100) ^ 2)",
        "ui_group": "body"
      }
    ]
  },

